<div class="row">
	<div class="col-xs-12 col-sm-offset-2 col-md-offset-2 col-sm-8 col-md-8 col-lg-offset-3 col-lg-6">
		<%= form_for(tasklist) do |f| %>
			<% if tasklist.errors.any? %>
				<div class="alert alert-warning">
					<ul>
						<% tasklist.errors.full_messages.each do |tasklist| %>
						<li><%= tasklist%></li>
						<% end %>
					</ul>
				</div>
			<% end %>
				
			<div class="form-group">
				<%= f.label :content, "Task" %>
				<%= f.text_field :content, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :status, "Status" %>
				<%= f.text_field :status, class: "form-control" %>
			</div>
			<%= f.submit "Submit", class:"btn btn-primary" %>
		<% end %>
	</div>
</div>
